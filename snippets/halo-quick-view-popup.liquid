{%- unless request.page_type == 'product' -%}
	<link rel="stylesheet" href="{{ 'component-product.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endunless -%}
<link rel="stylesheet" href="{{ 'component-quick-view.css' | asset_url }}" media="print" onload="this.media='all'">

{%- unless request.page_type == 'product' -%}
	<noscript>{{ 'component-product.css' | asset_url | stylesheet_tag }}</noscript>
{%- endunless -%}
<noscript>{{ 'component-quick-view.css' | asset_url | stylesheet_tag }}</noscript>

<div class="halo-popup halo-quick-view-popup halo-popup-topDown customPopup-extraLarge" data-quick-view-popup id="halo-quick-view-popup">
	<div class="halo-popup-wrapper">
		<a href="javascript:void(0)" title="{{ 'general.common.close' | t }}" class="halo-popup-close clearfix" data-close-quick-view-popup>
	        {% render 'icon-close' %}
	    </a>
	    <div class="halo-popup-content halo-popup-scroll custom-scrollbar"></div>
	</div>
</div>
<script src="{{ 'variants-quick-view.js' | asset_url }}" defer="defer"></script>