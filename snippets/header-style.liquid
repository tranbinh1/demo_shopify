<style>
    {%- liquid
        assign header_top_bg = section.settings.header_top_bg
        assign header_top_color = section.settings.header_top_color

        assign header_bottom_bg = section.settings.header_bottom_bg

        assign header_mobile_bg = section.settings.header_mobile_bg
        assign header_mobile_color = section.settings.header_mobile_color

        assign lv_1_font_size = section.settings.lv_1_font_size
        assign lv_1_font_weight = section.settings.lv_1_font_weight
        assign lv_1_text_transform = section.settings.lv_1_text_transform
        assign lv_1_color = section.settings.lv_1_color
        assign lv_1_color_hover = section.settings.lv_1_color_hover

        assign lv_2_font_size = section.settings.lv_2_font_size
        assign lv_2_font_weight = section.settings.lv_2_font_weight
        assign lv_2_text_transform = section.settings.lv_2_text_transform
        assign lv_2_color = section.settings.lv_2_color
        assign lv_2_color_hover = section.settings.lv_2_color_hover

        assign logo_width = section.settings.logo_width
        assign logo_font_size = section.settings.logo_font_size
        assign logo_font_weight = section.settings.logo_font_weight
        assign logo_color = section.settings.logo_color

        assign text_color = section.settings.text_color
        assign text_bg = section.settings.text_bg
        assign text_color_active = section.settings.text_color_active
        assign text_bg_active = section.settings.text_bg_active

        assign sale_item_color = section.settings.sale_item_color

        if section.settings.show_label
            assign new_label_color = section.settings.new_label_color
            assign new_label_bg = section.settings.new_label_bg
            assign sale_label_color = section.settings.sale_label_color
            assign sale_label_bg = section.settings.sale_label_bg
            assign hot_label_color = section.settings.hot_label_color
            assign hot_label_bg = section.settings.hot_label_bg
        endif
    -%}

    .header-top{
        display: none;
        {% if header_top_bg != 'rgba(0,0,0,0)' and header_top_bg != blank %}
            background-color: {{ header_top_bg }};
        {% endif %}
    }

    .header-bottom{
        display: none;
        {% if header_bottom_bg != 'rgba(0,0,0,0)' and header_bottom_bg != blank %}
            background-color: {{ header_bottom_bg }};
        {% endif %}
    }

    {% if header_top_color != 'rgba(0,0,0,0)' and header_top_color != blank %}
        .header__icon .icon{
            fill: {{ header_top_color }};
        }
    {% endif %}

    {% if header_bottom_bg != 'rgba(0,0,0,0)' and header_bottom_bg != blank %}
        .header-mobile{
            background-color: {{ header_mobile_bg }};
        }

        .header-mobile .header__icon .icon{
            fill: {{ header_mobile_color }};
        }
    {% endif %}

    .header-mobile .header__heading .h2{
        font-size: calc(var(--font-size) + 4px);
        font-weight: var(--font-weight-bold);
        color: {{ header_mobile_color }};
    }

    .menu-drawer__close-button{
        font-size: {{ lv_1_font_size | append: 'px' }};
        font-weight: {{ lv_1_font_weight }};
        color: {{ lv_1_color }};
        text-transform: {{ lv_1_text_transform }};
    }

    .menu-lv-1__action,
    .menu--mobile-lv-1__action{
        font-size: {{ lv_1_font_size | append: 'px' }};
        font-weight: {{ lv_1_font_weight }};
        color: {{ lv_1_color }};
        text-transform: {{ lv_1_text_transform }};
    }

    .menu-lv-2__action,
    .menu-lv-3__action,
    .menu--mobile-lv-2__action,
    .menu--mobile-lv-3__action{
        font-size: {{ lv_2_font_size  | append: 'px' }};
        font-weight: {{ lv_2_font_weight }};
        color: {{ lv_2_color }};
        text-transform: {{ lv_2_text_transform }};
    }

    .site-nav-title,
    .site-nav-link{
        color: {{ lv_2_color }};
    }

    {%- if section.settings.show_label -%}
        .menu-lv-1 .label.new-label,
        .menu-drawer__menu-item .label.new-label{
            color: {{ new_label_color }};
            background-color: {{ new_label_bg }};
        }

        .menu-lv-1 .label.new-label:before{
            border-bottom-color: {{ new_label_bg }};
        }

        .menu-drawer__menu-item .label.new-label:before{
            border-right-color: {{ new_label_bg }};
        }

        .menu-lv-1 .label.sale-label,
        .menu-drawer__menu-item .label.sale-label{
            color: {{ sale_label_color }};
            background-color: {{ sale_label_bg }};
        }

        .menu-lv-1 .label.sale-label:before{
            border-bottom-color: {{ sale_label_bg }};
        }

        .menu-drawer__menu-item .label.sale-label:before{
            border-right-color: {{ sale_label_bg }};
        }

        .menu-lv-1 .label.hot-label,
        .menu-drawer__menu-item .label.hot-label{
            color: {{ hot_label_color }};
            background-color: {{ hot_label_bg }};
        }

        .menu-lv-1 .label.hot-label:before{
            border-bottom-color: {{ hot_label_bg }};
        }

        .menu-drawer__menu-item .label.hot-label:before{
            border-right-color: {{ hot_label_bg }};
        }
    {%- endif -%}

    .menu--mobile-lv-1__action > .icon{
        fill: {{ lv_1_color }};
    }

    {% if sale_item_color != 'rgba(0,0,0,0)' and sale_item_color != blank %}
        .menu-sale > .menu-lv-1__action,
        .menu-sale > details > .menu--mobile-lv-1__action,
        .menu-sale > .menu-lv-2__action,
        .menu-sale > .menu-lv-3__action,
        .menu-sale > details > .menu--mobile-lv-2__action,
        .menu-sale > .menu--mobile-lv-3__action,
        .active-sale > .site-nav-link{
            color: {{ sale_item_color }}!important;
        }

        .menu-sale > .menu--mobile-lv-1__action > .icon{
            fill: {{ sale_item_color }}!important;
        }
    {% endif %}

    .header__list .link{
        color: {{ text_color }};
        background-color: {{ text_bg }};
    }

    .header__list .link svg{
        fill: {{ text_color }};
    }

    .header__list .item.is-active .link{
        color: {{ text_color_active }};
        background-color: {{ text_bg_active }};
    }

    .menu-lv-item.has-megamenu .menu-dropdown{
        display: none;
    }

    @media screen and (min-width: 1025px) {
        .header-top,
        .header-bottom{
            display: block;
        }
        
        .header-mobile {
            display: none;
        }

        .header-top--left,
        .header-top--right{
            width: calc(50% - ({{ logo_width | append: 'px' }}/ 2));
        }

        .header-top--center{
            width: {{ logo_width | append: 'px' }};
        }

        .header__heading .h2{
            font-size: {{ logo_font_size  | append: 'px' }};
            font-weight: {{ logo_font_weight }};
            {% if logo_color != 'rgba(0,0,0,0)' and logo_color != blank %}
                color: {{ logo_color }};
            {% endif %}
        }

        .menu-lv-1:hover .menu-lv-1__action{
            color: {{ lv_1_color_hover }};
        }

        .menu-lv-2:hover .menu-lv-2__action,
        .menu-lv-3:hover .menu-lv-3__action{
            color: {{ lv_2_color_hover }};
        }

        .site-nav-link:hover{
            color: {{ lv_2_color_hover }};
        }
    }
</style>